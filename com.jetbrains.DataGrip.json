{
  "app-id": "com.jetbrains.DataGrip",
  "command": "datagrip",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "separate-locales": false,
  "sdk": "org.freedesktop.Sdk",
  "finish-args": [
    "--device=dri",
    "--env=DATAGRIP_JDK=/app/extra/datagrip/jre64/",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "libsecret",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-gtk-doc",
        "--disable-introspection",
        "--disable-manpages",
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "f4fa198d4e131f94d9ec84cfeaf6c124245e7ff3c0af11c76cc35332bfae5585",
          "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.18.6/libsecret-0.18.6.tar.gz"
        }
      ]
    },
    {
      "name": "datagrip",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 datagrip.sh /app/bin/datagrip",
        "install -Dm0755 -t /app/bin/ apply_extra",
        "install -Dm0644 -t /app/share/applications/ com.jetbrains.DataGrip.desktop",
        "install -Dm0644 -t /app/share/icons/hicolor/scalable/apps/ com.jetbrains.DataGrip.svg",
        "install -Dm0644 -t /app/share/metainfo/ com.jetbrains.DataGrip.appdata.xml"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "datagrip.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "491ff4f68f0bcc7ca616c062bcb65796941a5e53731329a068922a73ab57ca6e",
          "size": 291916525,
          "url": "https://download.jetbrains.com/datagrip/datagrip-2018.3.1.tar.gz"
        },
        {
          "type": "file",
          "path": "com.jetbrains.DataGrip.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.jetbrains.DataGrip.desktop"
        },
        {
          "type": "file",
          "path": "com.jetbrains.DataGrip.svg"
        },
        {
          "type": "script",
          "commands": [
            "mkdir datagrip/",
            "tar -zxf datagrip.tar.gz -C datagrip/ --strip-components=1",
            "rm -f datagrip.tar.gz"
          ],
          "dest-filename": "apply_extra"
        },
        {
          "type": "script",
          "commands": [
            "ln -s /proc/mounts /etc/mtab",
            "exec env TMPDIR=${XDG_CACHE_HOME}/tmp/ /app/extra/datagrip/bin/datagrip.sh \"$@\""
          ],
          "dest-filename": "datagrip.sh"
        }
      ]
    }
  ]
}
