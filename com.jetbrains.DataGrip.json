{
  "app-id": "com.jetbrains.DataGrip",
  "command": "datagrip",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--env=DATAGRIP_JDK=/app/extra/datagrip/jre64",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=wayland",
    "--socket=x11",
    "--talk-name=org.freedesktop.Flatpak",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    "shared-modules/gtk2/gtk2.json",
    {
      "name": "libsecret",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la",
        "/lib/debug",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-gtk-doc",
        "--disable-manpages",
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "303c6e8cf3e12534e885b0682cd6130716c6834397b76d3829321b6d83b2389c",
          "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.19.1/libsecret-0.19.1.tar.gz"
        }
      ]
    }, {
      "name": "datagrip",
      "buildsystem": "simple",
      "build-commands": [
        "unzip datagrip_logos.zip",
        "install -D -m0644 logo.svg /app/share/icons/hicolor/scalable/apps/${FLATPAK_ID}.svg",
        "install -D -m0755 datagrip.sh /app/bin/datagrip",
        "install -D -m0644 -t /app/share/applications/ ${FLATPAK_ID}.desktop",
        "install -D -m0644 -t /app/share/metainfo/ ${FLATPAK_ID}.appdata.xml",
        "install -D -m0755 -t /app/bin/ apply_extra"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "datagrip.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "c128cc20a90f88598cdf075f432e2c40ce175ded188c22bc35f7cf90b7c3862a",
          "size": 353348395,
          "url": "https://download.jetbrains.com/datagrip/datagrip-2019.2.4.tar.gz"
        }, {
          "type": "file",
          "path": "com.jetbrains.DataGrip.appdata.xml"
        }, {
          "type": "file",
          "path": "com.jetbrains.DataGrip.desktop"
        }, {
          "type": "file",
          "sha256": "f085988de080ad0b8f6b5834eed380deeca2eaffbf984dd1ee0836b08ddbc1b0",
          "url": "https://resources.jetbrains.com/storage/products/datagrip/docs/datagrip_logos.zip"
        }, {
          "type": "script",
          "commands": [
            "mkdir datagrip/",
            "tar -zxf datagrip.tar.gz --directory=datagrip/ --strip-components=1",
            "rm -f datagrip.tar.gz"
          ],
          "dest-filename": "apply_extra"
        }, {
          "type": "script",
          "commands": [
            "JAVA_TOOL_OPTIONS=-Djava.io.tmpdir=${XDG_CACHE_HOME}/tmp/",
            "export JAVA_TOOL_OPTIONS",
            "TMPDIR=${XDG_CACHE_HOME}/tmp/",
            "export TMPDIR",
            "exec env /app/extra/datagrip/bin/datagrip.sh \"$@\""
          ],
          "dest-filename": "datagrip.sh"
        }
      ]
    }
  ]
}
